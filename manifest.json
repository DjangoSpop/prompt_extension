{
  "manifest_version": 3,
  "name": "Prompt Temple - Your Wisdom Library",
  "version": "2.0.0",
  "description": "Your temple of prompt wisdom. Curate, enhance, and access your professional prompt library with AI-powered optimization and credit-based enhancement.",

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "sidePanel"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://bard.google.com/*",
    "https://www.perplexity.ai/*",
    "https://you.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://www.perplexity.ai/*",
        "https://you.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Temple - Open Your Wisdom Library",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "commands": {
    "enhance-prompt": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Enhance current prompt"
    },
    "open-temple": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open Wisdom Temple (Side Panel)"
    },
    "quick-template": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Insert quick template"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "templates/*"],
      "matches": ["<all_urls>"]
    }
  ]
}